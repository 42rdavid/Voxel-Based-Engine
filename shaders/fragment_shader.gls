#version 410

uniform sampler2D				tex;
uniform float					renderVoxelRidges;
uniform vec3					color;

in vec2							frag_texture;
in vec3							frag_normal;

out vec4						outputColor;

void main(void)
{
	vec4		c;

	if (renderVoxelRidges > 0.5f)
		c = vec4(color, 1.0f);
	else
		c = texture(tex, frag_texture);
	outputColor = c;
}
